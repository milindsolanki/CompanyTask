<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".relative.Home_Relative_Activity">


    <RelativeLayout
        android:id="@+id/rlImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nachos" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_2dp"
            android:layout_below="@id/imgItem"
            android:background="@color/colorPhonePe" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCock"
                android:layout_width="@dimen/dimens_100dp"
                android:layout_height="@dimen/dimens_100dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/dimens_16dp">

        <TextView
            android:id="@+id/txtItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemContent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:padding="@dimen/dimens_10dp"
            android:text="@string/fantasy_hunt"
            android:textColor="@color/colorPhonePe"
            android:textSize="@dimen/dimens_24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtItemContent"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/dimens_5dp"
            android:text="@string/cock_request"
            android:textColor="@color/colorPhonePe"
            android:textSize="@dimen/dimens_18sp" />

        <Button
            android:id="@+id/btn_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:background="@drawable/btn_register"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="@dimen/dimens_10dp"
            android:text="@string/our_menu"
            android:textAllCaps="true"
            android:textColor="@color/colorPhonePe"
            android:textSize="@dimen/dimens_20sp" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@drawable/btn_register"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="@dimen/dimens_10dp"
            android:text="@string/order_food"
            android:textAllCaps="true"
            android:textColor="@color/colorPhonePe"
            android:textSize="@dimen/dimens_20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@drawable/btn_register"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="@dimen/dimens_10dp"
            android:text="@string/reserve_a_table"
            android:textAllCaps="true"
            android:textColor="@color/colorPhonePe"
            android:textSize="@dimen/dimens_20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@drawable/btn_register"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:padding="@dimen/dimens_10dp"
            android:text="@string/find_a_bed"
            android:textAllCaps="true"
            android:textColor="@color/colorPhonePe"
            android:textSize="@dimen/dimens_20sp" />


    </LinearLayout>

</LinearLayout>