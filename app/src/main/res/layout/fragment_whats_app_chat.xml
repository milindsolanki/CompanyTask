<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout"
    android:orientation="vertical"
    tools:context=".whatsappFrg.WhatsAppChatFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimens_70dp"
            android:layout_height="@dimen/dimens_70dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/nachos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_10dp"
            android:layout_marginEnd="@dimen/dimens_10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:padding="@dimen/dimens_5dp"
                android:text="@string/name"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/dimens_5dp"
                android:text="@string/typing"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dimens_14sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_2dp"
                android:layout_margin="@dimen/dimens_5dp"
                android:background="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>