<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".recyclerViewTask.RecyclerViewTaskActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/linear"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:padding="@dimen/dimens_5dp"
                android:text="Horizontal View"
                android:textColor="@color/colorPhonePe"
                android:textSize="@dimen/dimens_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/horizontalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_2dp"
                android:layout_margin="@dimen/dimens_5dp"
                android:background="@color/colorPhonePe" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:padding="@dimen/dimens_5dp"
                android:text="Grid View"
                android:textColor="@color/colorPhonePe"
                android:textSize="@dimen/dimens_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_2dp"
                android:layout_margin="@dimen/dimens_5dp"
                android:background="@color/colorPhonePe" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:padding="@dimen/dimens_5dp"
                android:text="vertical View"
                android:textColor="@color/colorPhonePe"
                android:textSize="@dimen/dimens_18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/linearView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>